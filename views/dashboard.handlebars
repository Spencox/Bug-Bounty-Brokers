<body>
    <div class="container mt-4">
        <h1 class="text-right-mb-4">{{userData.username}}'s Bug Bounties</h1>
        <div class="row">
             <div class="col-md-3">
                <div class="list-group">
                    <a href="/dashboard" class="btn btn-primary">Bounty Board</a>
                    <a href="/feed" class="btn btn-primary">Bug Feed</a>
                    <a href="/reposearch" class="btn btn-primary">Search Repos</a>
                    <a href="/bugs" class="btn btn-primary">Most Wanted</a>
                </div>
            </div>
            <div class="bg"></div>
            <div class="bg bg2"></div>
            <div class="bg bg3"></div>
           <!-- Side Panel -->
            {{ sidebar}}
    <!-- Main Content -->
    <div class="col-md-9 ">
      <div class="card-container">
       {{#each bounties as |bounty|}}
    <div class="card mb-3 custom-card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <p class="card-text">Owner: {{bounty.bug.repo.repo_owner}}</p>
                <p class="card-text">Repo: {{bounty.bug.repo.repo_name}}</p>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <p class="card-text">Issue Number: {{bounty.bug.issue_number}}</p>
                <p class="card-text">State: {{bounty.bug.issue_state}}</p>
            </div>
            <p class="card-text" style="max-height: 3em; overflow: hidden; text-overflow: ellipsis;">Description of Issue: {{bounty.bug.issue_body}}</p>
            <p class="card-text">URL: <a href="{{bounty.bug.issue_url}}">{{bounty.bug.issue_url}}</a></p>
            <div class="d-flex justify-content-between ">
                <p class="card-text">Add Bounty: <input type="text" placeholder="Enter Bounty Amount"></p>
                <p class="card-text">Current Bounty: {{bounty.bounty_amount}}</p>
            </div>
            <a href="#" class="btn btn-primary">Create Bounty</a>

        </div>
    </div>
{{/each}}

      </div>
    </div>
  </div>
        </div>
    </div>
</body>
