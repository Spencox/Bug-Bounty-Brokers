<body>
    <div class="container mt-4">
        <h1 class="text-right-mb-4">Search Page</h1>
        <div class="row">
              <div class="col-md-3">
                <div class="list-group">
                    <a href="/dashboard" class="btn btn-primary">Bounty Board</a>
                    <a href="/feed" class="btn btn-primary">Bug Feed</a>
                    <a href="/reposearch" class="btn btn-primary">Search Repos</a>
                    <a href="/bugs" class="btn btn-primary">Most Wanted</a>
                </div>
            </div>
            <div class="bg"></div>
            <div class="bg bg2"></div>
            <div class="bg bg3"></div>
            <!-- Side Panel -->
            {{ sidebar}}

            <!-- Main Content -->
            <div class="col-md-9">
                <!-- Search Bar Form -->
                <form id="search-form">
                    <div class="input-group mb-3">
                        <input id="search" type="text" class="form-control" placeholder="Search..." aria-label="Search" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit" id="search-button">Search</button>
                        </div>
                    </div>
                </form>

                <!-- Search Results (Cards) -->
                <div class="result-container">
                    <!-- Result Card 1 -->
                    {{#each repositories as |repository|}}
                        <div class="card mb-3 custom-card">
                            <div class="card-body">
                                <h5 class="card-title row">
                                    <div class="col repo-name">Repo Name: {{repository.name}}</div>
                                    <div class="col text-right repo-owner">Repo Owner: {{repository.owner}}</div>
                                </h5>
                                <p class="card-text">{{repository.description}}</p>
                                <a class="btn btn-primary see-issues-button" data-repo-name="{{repository.name}}" data-owner="{{repository.owner}}">See Issues</a>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <script src="js/search.js"></script>
    <script src="js/issues.js"></script>
</body>
