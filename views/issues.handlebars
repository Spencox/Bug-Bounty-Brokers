<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Current Issues</h1>
        <div class="row">
            <!-- Side Panel -->
            {{> sidebar}}
            <!-- Main Content -->
            <div class="col-md-9">
                <!-- Cards for Issues -->
                <div class="card-container">
                    {{#each issues as |issue|}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title">Issue {{issue.issue_number}}</h5>
                                <span class="badge">{{issue.issue_state}}</span>
                            </div>
                            <p class="card-text">{{issue.issue_body}}</p>
                            <p class="card-text">{{issue.issue_url}}</p>
                            <a href="#" class="btn btn-primary">Create Bounty</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</body>
